<div class="container centered">
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @student.name %>
      </h1>
    <div class="panel panel-default">
    <div class="panel-heading"><h3>Tasks</h3></div>
      <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Description</th>
          <th>Points</th>
          <th>Business</th>
        </tr>
      </thead>

      <tbody>
        <% @student.tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.description %></td>
            <td><%= task.points %></td>
            <td><%= task.business %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </section>
  </aside>
</div>
</div>
